{
  "scaleImages_default": {
    "src": "./wp-content/uploads/resize/source/*.{gif,jpg,jpeg,png}",
    "//": "List of options [https://github.com/derhuerst/gulp-scale-images#usage] & plugin options [http://sharp.pixelplumbing.com/en/stable/api-output/]",
    "options": {
      "jpegFile": {
        "maxWidth": 800,
        "format": "jpeg",
        "withoutEnlargement": true,
        "formatOptions": {
          "quality": 60
        }
      }
    },
    "dest": "./wp-content/uploads/resize/"
  },
  "scaleImages_slider": {
    "src": "./wp-content/uploads/resize/slider/source/*.{gif,jpg,jpeg,png}",
    "//": "List of options [https://github.com/derhuerst/gulp-scale-images#usage] & plugin options [http://sharp.pixelplumbing.com/en/stable/api-output/]",
    "options": {
      "desktopImage": {
        "maxWidth": 1400,
        "format": "jpeg",
        "withoutEnlargement": true,
        "formatOptions": {
          "quality": 60
        }
      },
      "tabletImage": {
        "maxWidth": 778,
        "format": "jpeg",
        "withoutEnlargement": true,
        "formatOptions": {
          "quality": 60
        }
      },
      "mobileImage": {
        "maxWidth": 480,
        "format": "jpeg",
        "withoutEnlargement": true,
        "formatOptions": {
          "quality": 60
        }
      }
    },
    "dest": "./wp-content/uploads/resize/slider/"
  }
}